<h1><%= @painting.title %> </h1>

<p>Title: <%= @painting.title %></p>
<p>Year: <%= @painting.year %></p>
<p>Style: <%= @painting.style %></p>
<p> <%= image_tag @painting.image %></p>
<p>Artist: <%= link_to "#{@painting.artist.name}", artist_path(@painting.artist) %></p>
<p>Gallery: <%= link_to "#{@painting.gallery.name}", gallery_path(@painting.gallery) %></p>

<button type="button" class="btn btn-default"><%= link_to "Create", new_painting_path %></button> | <%= link_to "Edit", edit_painting_path(@painting) %> | <%= link_to "Delete", painting_path(@painting), method: 'delete' %> | <%= link_to "Home", root_path %> | <%= link_to "Gallery", galleries_path %> | <%= link_to "Artist", artists_path %> 

