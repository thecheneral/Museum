<%= form_for @painting, :html => {:class => 'form-horizontal'} do |f| %>
  <div class="form-group">
    <%= f.label :title, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-5">
      <%= f.text_field :title, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :year, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-5">
      <%= f.number_field :year, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :style, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-5">
      <%= f.text_field :style, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :image, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-5">
      <%= f.text_field :image, :class => 'form-control' %>
    </div>
  </div>
  

  <div class="col-sm-5 col-sm-offset-2" style="text-align: center;">
    <%= f.submit @painting.new_record? ? "Create" : "Update", :class => 'btn btn-primary' %>
    <button class="btn btn-warning" type="submit"><%= link_to 'Cancel', root_path %></button>
    
  </div>

  <% end %>