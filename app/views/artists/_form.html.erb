<%= form_for @artist, :html => {:class => 'form-horizontal'} do |f| %>
  <div class="form-group">
    <%= f.label :name, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-5">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :nationality, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-5">
      <%= f.text_field :nationality, :class => 'form-control' %>
    </div>
  </div>
    <div class="form-group">
    <%= f.label :dob, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-5">
      <%= f.text_field :dob, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :image, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-5">
      <%= f.text_field :image, :class => 'form-control' %>
    </div>
  </div>


  <div class="col-sm-5 col-sm-offset-2" style="text-align: center;">
    <%= f.submit @artist.new_record? ? "Create" : "Update", :class => 'btn btn-primary' %>
    <button class="btn btn-warning" type="submit"><%= link_to 'Cancel', artists_path %></button>
    
  </div>

  <% end %>