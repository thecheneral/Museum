<%= form_for @gallery, :html => {:class => 'form-horizontal'} do |f| %>
  <div class="form-group">
    <%= f.label :name, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-5">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :City, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-5">
      <%= f.text_field :city, :class => 'form-control' %>
    </div>
  </div>
  

  <div class="col-sm-5 col-sm-offset-2" style="text-align: center;">
    <%= f.submit @gallery.new_record? ? "Create" : "Update", :class => 'btn btn-primary' %>
    <button class="btn btn-warning" type="submit"><%= link_to 'Cancel', galleries_path %></button>
    
  </div>

  <% end %>